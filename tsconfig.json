{
  "compilerOptions": {
    /* базовые настройки */
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],

    /* React */
    "jsx": "react-jsx",
    "isolatedModules": true,

    /* строгий режим (можно ослабить) */
    "strict": true,
    "noImplicitOverride": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* ES‑совместимость и импорты */
    "esModuleInterop": true, // чинит default‑импорт CSS‑модулей
    "allowSyntheticDefaultImports": true,

    /* алиасы */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@entities/*": ["src/entities/*"],
      "@features/*": ["src/features/*"],
      "@shared/*": ["src/shared/*"],
      "@widgets/*": ["src/widgets/*"],
      "@pages/*": ["src/pasges/*"],
      "@app/*": ["src/app/*"]
    },

    /* Vite типы и JSON‑импорты */
    "types": ["vite/client"],
    "resolveJsonModule": true
  },

  "include": ["src", "src/**/*.d.ts"]
}
